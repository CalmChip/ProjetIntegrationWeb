<div class="row mt-5">
    <div class="col-md-8 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-sign-in-alt"></i> Connexion
        </h1>
        <p><%- include('./partiels/messages.ejs') %></p>
        <form action="/usagers/login" method="POST">

          <div class="form-floating">
            <input
              type="email"
              name="_id"
              id="_id"
              class="form-control"
              value="<%= typeof _id != 'undefined' ? _id : '' %>"
              placeholder="Entrez un courriel"
            />
            <i class="fas fa-envelope fa-lg icon"></i>
            <label for="_id">Courriel</label>
          </div>

          <div class="form-floating">
            <input
              type="password"
              name="password"
              id="password"
              class="form-control"
              value="<%= typeof password != 'undefined' ? password : '' %>"
              placeholder="Entez un mot de passe"
            />
            <i class="fa fa-lock fa-lg icon"></i>
            <label for="password">Mot de passe</label>
          </div>

          <div style="display: flex; justify-content: center; align-items: center;">
          <button
            type="submit"
            class="btn btn-primary btn-block"
            style="margin-top: 0.5rem; font-size: larger;">
            Connexion
          </button>
          </div>

        </form>
          <p class="lead mt-4 text-center">
            Vous n'avez pas de compte ? <a href="/usagers/login">S'enregistrer</a>
          </p>
      </div>
    </div>
  </div>
<div class="row mt-5">
  <div class="col-md-8 m-auto">
    <div class="card card-body">

        <div class="d-flex justify-content-between">
          <p><a class="btn btn-dark bt-lg" href="/">Back</a></p>
          <h1><i class="fas fa-sign-in-alt"></i> Connexion</h1>
          <p style="width: 7%;"></p>
        </div>

      
      <p><%- include('./partiels/messages.ejs') %></p>
      <form action="/users/login" method="POST">
        <div class="form-floating">
          <input
            type="email"
            name="email"
            id="email"
            class="form-control"
            value="<%= typeof email != 'undefined' ? email : '' %>"
            placeholder="Entrez un courriel"
          />
          <i class="fas fa-envelope fa-lg icon"></i>
          <label for="email">Courriel</label>
        </div>

        <div class="form-floating">
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            value="<%= typeof password != 'undefined' ? password : '' %>"
            placeholder="Entez un mot de passe"
          />
          <i class="fa fa-lock fa-lg icon"></i>
          <label for="password">Mot de passe</label>
        </div>

        <div
          style="display: flex; justify-content: center; align-items: center"
        >
          <button
            type="submit"
            class="btn btn-primary btn-block"
            style="margin-top: 0.5rem; font-size: larger"
          >
            Connexion
          </button>
        </div>
      </form>
      <p class="lead mt-4 text-center">
        Vous n'avez pas de compte ? <a href="/users/register"><strong>S'enregistrer</strong></a>
      </p>
    </div>
  </div>
</div>
